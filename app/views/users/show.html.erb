<!--左側-->
<%= render 'user', user: @user %>




<!--右側-->
<h1>Books</h1>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(@user) do %>
        <%= image_tag @user.get_profile_image(100,100) %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %>
      </td>
      <td>
       <%= book.body %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>