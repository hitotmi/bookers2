<h1>User info</h1>
<div>
<%= image_tag @user.get_profile_image(100,100) %>
</div>
<table>
  <tr>
    <th>name</th>
    <th><%= @user.name %>
  </tr>
  <tr>
    <td>introduction</td>
    <td><%= @user.introduction %>
  </tr>
</table>

<%= link_to "プロフィール編集", edit_user_path(current_user) %>


<h2>New book</h2>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<div><%= f.submit "Create Book" %></div>
<% end %>


<h1>Books</h1>
<table>
  <div class="heading">
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  </div>
  <div class="main">
    <% @books.each do |book| %>
     <tr>
      <td>
       <%= link_to user_path(book.user) do %>
        <%= image_tag book.user.get_profile_image(100,100) %>
       <% end %>
      </td>
      <td>
        <%= link_to book.title, book_path(book.id)  %>
      </td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </div>
</table>
