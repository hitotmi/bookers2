<h2>New book</h2>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit "Create Book" %>
<% end %>


<h1>Books</h1>
<table>
  <div class="heading">
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  </div>
  <div class="main">
    <tr>
  <% @books.each do |book| %>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
  <% end %>
  </tr>
  </div>
</table>
